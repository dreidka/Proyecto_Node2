extends ../layout

block content
    a(href='/bicicletas/create') Nueva Bicicleta
    table.table
        thead
            tr
                th(scope='col') #
                th(scope='col') Color
                th(scope='col') Modelo
                th(scope='col') Ubicacion
                th(scope='col') 
        tbody
            each bici in bicis
                tr
                    th(scope='row')
                        =bici.id
                        td=bici.color
                        td=bici.modelo
                        td=bici.ubicacion
                        td
                            a(href='bicicletas/'+bici.id+'/update') Editar
                        td
                            form.inline(action="bicicletas/"+bici.id+'/delete' method="POST")
                                input(type="hidden" name="id" value= bici.id)
                                button.link-button(type="submit" name="submit_param" value="submit_value" class="btn btn-danger")